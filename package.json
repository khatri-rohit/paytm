{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "db:generate": "turbo run db:generate --filter=@repo/db",
    "db:migrate": "turbo run db:migrate --filter=@repo/db",
    "db:deploy": "turbo run db:deploy --filter=@repo/db",
    "build": "turbo run db:generate && turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo run db:generate",
    "prisma:generate": "prisma generate --schema=./packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}